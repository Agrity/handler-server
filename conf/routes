# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                     controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                         controllers.Assets.versioned(path="/public", file: Asset)


# ============================= API Responses =================================================== #

# ========== Handler ========== #
GET     /handlers                                 controllers.HandlerController.getAllHandlers()

POST    /handlers                                 controllers.HandlerController.createHandler()

GET     /handlers/:id                             controllers.HandlerController.getHandler(id: Long)

GET     /handlers/:id/growers                     controllers.HandlerController.getAllGrowers(id: Long)

POST    /handlers/:id/growers                     controllers.HandlerController.addGrower(id: Long)

GET     /handlers/:id/growers/:growerId           controllers.HandlerController.getGrower(id: Long, growerId: Long)

GET     /handlers/:id/offers                      controllers.OfferController.getAllHandlerOffers(id: Long)

# ========== Grower ========== #

GET     /growers                                  controllers.GrowerController.getAllGrowers()

POST    /growers                                  controllers.GrowerController.createGrower()

GET     /growers/:id                              controllers.GrowerController.getGrower(id: Long)

GET     /growers/:id/offers                       controllers.OfferController.getAllGrowerOffers(id: Long)

# ========== Offer ========== #

GET     /offers                                   controllers.OfferController.getAllOffers()

POST    /offers                                   controllers.OfferController.createOffer()

GET     /offers/:id                               controllers.OfferController.getOffer(id: Long)

GET     /offers/:id/index                         controllers.OfferController.indexOffer(id: Long)

GET     /offers/:id/send                          controllers.OfferController.sendOffer(id: Long)

GET     /offers/:offerId/accept/:growerId         controllers.OfferController.acceptOffer(offerId: Long, growerId: Long)

GET     /offers/:offerId/reject/:growerId         controllers.OfferController.rejectOffer(offerId: Long, growerId: Long)

GET     /offers/:offerId/requestcall/:growerId    controllers.OfferController.requestCall(offerId: Long, growerId: Long)

# =============================== HTML Responses ================================================ #


GET     /                                         controllers.Application.index()

GET     /html/handlers/:handlerId/offers          controllers.HtmlOfferController.handlerOfferList(handlerId: Long)

GET     /html/handlers/:handlerId/growers         controllers.HtmlGrowerController.handlerGrowerList(handlerId: Long)

GET     /html/growers/createForm                  controllers.HtmlGrowerController.growerCreateForm()

GET     /html/growers/:growerId                   controllers.HtmlGrowerController.growerView(growerId: Long)

POST    /html/growers                             controllers.HtmlGrowerController.growerCreate()

GET     /html/offers/createForm                   controllers.HtmlOfferController.offerCreateForm()

POST    /html/offers                              controllers.HtmlOfferController.offerCreate()

GET     /html/offers/:offerId                     controllers.HtmlOfferController.offerView(offerId: Long)
